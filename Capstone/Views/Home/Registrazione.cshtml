@model Capstone.Models.Utenti
@{
    ViewBag.Title = "Registrazione";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card" style=#00ff00; border-radius: 10px;">
                <div class="card-header text-center" style="background-color: #00ff00; color: #000;">
                    <h2 class="h3">Registrazione</h2>
                </div>
                <div class="card-body" style="background-color: #F2F2F2;">
                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()

                        <div class="form-group row align-items-center">
                            <div class="col-sm-6 text-center">
                                @Html.LabelFor(model => model.Nome, htmlAttributes: new { @class = "col-form-label text-dark" })
                                @Html.EditorFor(model => model.Nome, new { htmlAttributes = new { @class = "form-control", placeholder = "Nome..." } })
                                @Html.ValidationMessageFor(model => model.Nome, "", new { @class = "text-danger" })
                            </div>

                            <div class="col-sm-6 text-center">
                                @Html.LabelFor(model => model.Email, htmlAttributes: new { @class = "col-form-label text-dark" })
                                @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control", placeholder = "Email..." } })
                                @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group row align-items-center">
                            <div class="col-sm-6 text-center">
                                @Html.LabelFor(model => model.Username, htmlAttributes: new { @class = "col-form-label text-dark" })
                                @Html.EditorFor(model => model.Username, new { htmlAttributes = new { @class = "form-control", placeholder = "Username..." } })
                                @Html.ValidationMessageFor(model => model.Username, "", new { @class = "text-danger" })
                            </div>

                            <div class="col-sm-6 text-center">
                                @Html.LabelFor(model => model.Password, htmlAttributes: new { @class = "col-form-label text-dark" })
                                @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control", type = "password", placeholder = "Password..." } })
                                @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group text-center">
                            @Html.LabelFor(model => model.Indirizzo, htmlAttributes: new { @class = "col-form-label text-dark" })
                            @Html.EditorFor(model => model.Indirizzo, new { htmlAttributes = new { @class = "form-control", placeholder = "Indirizzo..." } })
                            @Html.ValidationMessageFor(model => model.Indirizzo, "", new { @class = "text-danger" })
                        </div>

                        <div class="form-group text-center">
                            <button type="submit" class="button-49-registrazione" style="width: 45%; color: #000; margin-top:20px">Registrazione</button>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
