@model Capstone.Models.Accesso

@{
    ViewBag.Title = "Login";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <br />
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-4">
                <div class="card">
                    <div class="card-header text-center" style="background-color: #00ff00;">
                        <h3 class="panel-title" style="color: #000;">Login</h3>
                    </div>
                    <div class="card-body-login" style="background-color: #F2F2F2;">
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                        <div class="form-group-login">
                            @Html.LabelFor(model => model.Username, htmlAttributes: new { @class = "control-label first-label text-dark" })
                            @Html.EditorFor(model => model.Username, new { htmlAttributes = new { @class = "form-control text-dark", placeholder = "Username..." } })
                            @Html.ValidationMessageFor(model => model.Username, "", new { @class = "text-danger" })
                        </div>

                        <div class="form-group-login">
                            @Html.LabelFor(model => model.Password, htmlAttributes: new { @class = "control-label text-dark mt-2" })
                            @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control text-dark", type = "password", placeholder = "Password..." } })
                            @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
                        </div>

                        <br />
                        <div class="form-group-login">
                            <button class="button-49-login" role="button" style="color: #000;">Login</button>
                        </div>

                        <div class="form-group-login text-center">
                            <p class="text-primary">Non hai ancora un account? <a href="@Url.Action("Registrazione", "Home")" class="text-primary">Registrati ora!</a>.</p>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>
}

