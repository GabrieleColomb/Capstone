<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title GameRescue</title>
    <link href="~/Content/Site.css" rel="stylesheet" />
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <!-- Font Awesome -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css"
          rel="stylesheet" />
    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css?family=Roboto:300,400,500,700&display=swap"
          rel="stylesheet" />
    <!-- MDB -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/mdb-ui-kit/6.4.2/mdb.min.css"
          rel="stylesheet" />
</head>
<body>
    @if (User.IsInRole("Admin"))
    {
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark" style="border-radius: 20px; background-color: #00FF00; padding: 10px; margin: 20px;">
            <div class="container">
                <a href="@Url.Action("Index", "Home", new { area = "" })" class="navbar-brand">
                    <img src="~/content/img/LOGO.png" alt="Logo dell'applicazione" width="200" height="50" />
                </a>
                <button type="button" class="navbar-toggler" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" title="Attiva/Disattiva spostamento" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">@Html.ActionLink("Lista utenti", "Index", "Admin", new { area = "" }, new { @class = "nav-link text-dark" })</li>
                        <li class="nav-item">@Html.ActionLink("Lista giochi", "ElencoGiochi", "Admin", new { area = "" }, new { @class = "nav-link text-dark" })</li>
                        <li class="nav-item">@Html.ActionLink("LogOut", "Logout", "Login", new { area = "" }, new { @class = "nav-link text-dark" })</li>
                    </ul>
                </div>
            </div>
        </nav>
    }
    else if (User.IsInRole("User"))
    {
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark" style="border-radius: 20px; background-color: #00FF00; padding: 10px; margin: 20px;">
            <div class="container">
                <a href="@Url.Action("Index", "Home", new { area = "" })" class="navbar-brand">
                    <img src="~/content/img/LOGO.png" alt="Logo dell'applicazione" width="200" height="50" />
                </a>
                <button type="button" class="navbar-toggler" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" title="Attiva/Disattiva spostamento" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">@Html.ActionLink("Giochi", "Gioco", "Giochi", new { area = "" }, new { @class = "nav-link text-dark" })</li>
                        <li class="nav-item">@Html.ActionLink("Inserisci il tuo annuncio", "Create", "Giochi", new { area = "" }, new { @class = "nav-link text-dark" })</li>
                        <li class="nav-item">@Html.ActionLink("Visualizza i tuoi annunci", "Index", "Giochi", new { area = "" }, new { @class = "nav-link text-dark" })</li>
                        <li class="nav-item">@Html.ActionLink("Il tuo carrello", "VisualizzaCarrello", "Carrello", new { area = "" }, new { @class = "nav-link text-dark" })</li>
                        <li class="nav-item">@Html.ActionLink("LogOut", "Logout", "Login", new { area = "" }, new { @class = "nav-link text-dark" })</li>
                    </ul>
                </div>
            </div>
        </nav>
    }
    else
    {
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark" style="border-radius: 20px 20px 20px 20px; background-color: #00FF00; padding: 10px; margin: 20px;">
            <div class="container">
                <a href="@Url.Action("Index", "Home", new { area = "" })" class="navbar-brand">
                    <img src="~/content/img/LOGO.png" alt="Logo dell'applicazione" width="200" height="50" />
                </a>
                <ul class="navbar-nav flex-grow-1">
                    <li class="nav-item">
                        @Html.ActionLink("Home", "Index", "Home", new { area = "" }, new { @class = "nav-link text-dark" })
                    </li>
                </ul>
                <div class="navbar-nav ml-auto">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            @Html.ActionLink("Registrati", "Registrazione", "Home", new { area = "" }, new { @class = "nav-link text-dark" })
                        </li>
                        <li class="nav-item">
                            <a href="@Url.Action("Login", "Login", new { area = "" })" class="nav-link text-dark">
                                <i class="fa-solid fa-user" style="color: #000000;" title="Login"></i>
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    }
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer class="footer">
            <p>&copy; @DateTime.Now.Year - GameRescue</p>
        </footer>
    </div>
    <script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>