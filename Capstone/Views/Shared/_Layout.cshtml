<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title GameRescue</title>
    <link href="~/Content/Site.css" rel="stylesheet" />
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css">
    <!-- Font Awesome -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet" />
    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css?family=Roboto:300,400,500,700&display=swap" rel="stylesheet" />
    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" integrity="sha384-T6w5lPbdN51XPf55+qhs5rJgce6zLlCcSZ8sPxXV0HH+uVZ+Mg/+w8p6C79w5w1X" crossorigin="anonymous">
</head>
<body>
    @if (User.IsInRole("Admin"))
    {
        <nav class="navbar navbar-expand-lg navbar" style="border-radius: 20px; background-color: #00FF00; padding: 10px; margin: 20px;">
            <div class="container">
                <a href="@Url.Action("Index", "Home", new { area = "" })" class="navbar-brand">
                    <img src="~/content/img/LOGO.png" alt="Logo dell'applicazione" width="200" height="50" />
                </a>
                <button class="navbar-toggler text-dark" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNavAdmin" aria-controls="navbarNavAdmin" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNavAdmin">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">@Html.ActionLink("Lista utenti", "Index", "Admin", new { area = "" }, new { @class = "nav-link text-dark animate__animated animate__bounce" })</li>
                        <li class="nav-item">@Html.ActionLink("Lista giochi", "ElencoGiochi", "Admin", new { area = "" }, new { @class = "nav-link text-dark animate__animated animate__bounce" })</li>
                    </ul>
                    <ul class="navbar-nav ms-auto">
                        <li class="nav-item">
                            <a href="@Url.Action("Logout", "Login", new { area = "" })" class="nav-link text-dark animate__animated animate__bounce">
                                <i class="fa-solid fa-right-from-bracket" style="color: #000000;" title="Logout"></i>
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    }
    else if (User.IsInRole("User"))
    {
        <nav class="navbar navbar-expand-lg navbar" style="border-radius: 20px; background-color: #00FF00; padding: 10px; margin: 20px;">
            <div class="container">
                <a href="@Url.Action("Index", "Home", new { area = "" })" class="navbar-brand">
                    <img src="~/content/img/LOGO.png" alt="Logo dell'applicazione" width="200" height="50" />
                </a>
                <button class="navbar-toggler text-dark" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNavUser" aria-controls="navbarNavUser" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNavUser">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">@Html.ActionLink("Giochi", "Gioco", "Giochi", new { area = "" }, new { @class = "nav-link text-dark animate__animated animate__bounce" })</li>
                        <li class="nav-item">@Html.ActionLink("Inserisci il tuo annuncio", "Create", "Giochi", new { area = "" }, new { @class = "nav-link text-dark animate__animated animate__bounce" })</li>
                        <li class="nav-item">@Html.ActionLink("Visualizza i tuoi annunci", "Index", "Giochi", new { area = "" }, new { @class = "nav-link text-dark animate__animated animate__bounce" })</li>
                    </ul>
                    <ul class="navbar-nav ms-auto">
                        <li class="nav-item me-2">
                            <a href="@Url.Action("VisualizzaCarrello", "Carrello", new { area = "" })" class="nav-link text-dark animate__animated animate__bounce">
                                <i class="fa-solid fa-cart-shopping" style="color: #000000;" title="Carrello"></i>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a href="@Url.Action("Logout", "Login", new { area = "" })" class="nav-link text-dark animate__animated animate__bounce">
                                <i class="fa-solid fa-right-from-bracket" style="color: #000000;" title="Logout"></i>
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    }
    else
    {
        <nav class="navbar navbar-expand-lg" style="border-radius: 20px; background-color: #00FF00; padding: 10px; margin: 20px;">
            <div class="container">
                <a href="@Url.Action("Index", "Home", new { area = "" })" class="navbar-brand">
                    <img src="~/content/img/LOGO.png" alt="Logo dell'applicazione" width="200" height="50" />
                </a>
                <button class="navbar-toggler text-dark" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNavGuest" aria-controls="navbarNavGuest" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNavGuest">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            @Html.ActionLink("Home", "Index", "Home", new { area = "" }, new { @class = "nav-link text-dark animate__animated animate__bounce" })
                        </li>
                    </ul>
                    <ul class="navbar-nav ms-auto">
                        <li class="nav-item">
                            <a href="@Url.Action("Registrazione", "Home", new { area = "" })" class="nav-link text-dark animate__animated animate__bounce">
                                Registrati
                            </a>
                        </li>
                        <li class="nav-item">
                            <a href="@Url.Action("Login", "Login", new { area = "" })" class="nav-link text-dark animate__animated animate__bounce">
                                <i class="fa-solid fa-user" style="color: #000000;" title="Login"></i>
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    }

    <style>
        .footer {
            background: linear-gradient(to right, #00FF00, #FF6600);
            color: #000000;
            padding: 20px 0;
        }
    </style>


    <div class="wrapper">
        <div class="container body-content">
            @RenderBody()
        </div>
    </div>
    <section class="text-center">
        <footer class="footer text-bg-dark mt-auto p-3 d-flex justify-content-center flex-column fixed-bottom">

            <!-- Grid container -->
            <div class="container p-4 pb-0">
                <!-- Section: Social media -->
                <section class="mb-4">
                    <!-- Github -->
                    <a class="btn btn-outline-light btn-floating m-1" href="#!" role="button"><i class="fa-brands fa-github"></i></a>

                    <!-- Twitter -->
                    <a class="btn btn-outline-light btn-floating m-1" href="#!" role="button"><i class="fa-brands fa-discord"></i></a>

                    <!-- Google -->
                    <a class="btn btn-outline-light btn-floating m-1" href="#!" role="button"><i class="fab fa-google"></i></a>

                    <!-- Instagram -->
                    <a class="btn btn-outline-light btn-floating m-1" href="#!" role="button"><i class="fab fa-instagram"></i></a>

                    <!-- Linkedin -->
                    <a class="btn btn-outline-light btn-floating m-1" href="#!" role="button"><i class="fab fa-linkedin-in"></i></a>

                </section>
                <!-- Section: Social media -->
            </div>
            <!-- Grid container -->
            <!-- Copyright -->
            <p>&copy; @DateTime.Now.Year GAMERESCUE </p>
        </footer>
    </section>


    <script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js" integrity="sha384-eMeZc8Lh/HBzUzLYt0ZIUyP5QVwP2b8Jg/AvYr/1krzJM4zFUl5O2yUsIzN5tnD" crossorigin="anonymous"></script>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
